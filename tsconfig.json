{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "types/*": ["types/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "migrations",
    "seeds"
  ]
}